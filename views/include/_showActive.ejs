
<% for(var i =0; i<users.length; i++){  %>
    <tr>
        <td><%= i + 1 %></td>
        <td><%= users[i].date %></td>
        <td><%= users[i].department %></td>
        <td><%= users[i].service %></td>
        <td><%= users[i].details %></td>
        <td><%= users[i].status %></td>
        <td>
            <a href="/update_user?id=<%=users[i]._id%>" class="btn border-shadow update">
               <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span> 
            </a>

             <a href="/view_case?id=<%=users[i]._id%>" class="btn border-shadow"  >
                <span class="text-gradient"><i class="fa-regular fa-eye"></i></span> 
             </a>
        </td>
    </tr>
    
 <% } %>
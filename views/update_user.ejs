
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Queries</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Query</h2>
            <span class="text-light">Use the below form to Update a query</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
         <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="date" class="text-light">Date of issue: </label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <p id="date"><%= user.date %> </p>
                </div>

                <div class="form-group">
                    <label for="department" class="text-light">Select Department:</label>
                    <p id="department"><%= user.department %></p>
                </div>
                <div class="form-group">
                    <label for="service" class="text-light">Select Service:</label>
                    <p><%= user.service %></p>
                </div>

                <div class="form-group">
                    <label for="details" class="text-light">Details</label>
                    <input type="text" name="details" value="<%= user.details%>" placeholder="Enter Details">
                </div>
                <div class="form-group">
                    <label for="remark" class="text-light">Remarks</label>
                    <input type="text" name="remark" value="<%= user.remark%>" placeholder="Enter Remark">
                </div>

                <div class="form-group">
                    <label for="rdate" class="text-light">Date of resolution: </label>
                    <input type="datetime-local" class="custom-select" name="date" id="date">
                </div>

                <div class="form-group">
                    <label for="gender" class="text-light">Issue Type: </label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="issuetype" value="Administrative" <%= user.issuetype == 'Administrative' ? 'checked' : '' %> >
                        <label for="radio-4" class="radio-label">Administrative</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="issuetype" value="Technical" <%= user.issuetype == 'Technical' ? 'checked' : '' %> >
                        <label for="radio-5" class="radio-label">Technical</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-6" name="issuetype" value="Dependency-on-other" <%= user.issuetype == 'Dependency-on-other' ? 'checked' : '' %> >
                        <label for="radio-6" class="radio-label">Depencency on others</label>
                    </div>
                </div>
                
        
                <div class="form-group">
                    <label for="gender" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-7" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                        <label for="radio-7" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-8" name="status" value="Closed" <%= user.status == 'Closed' ? 'checked' : '' %> >
                        <label for="radio-8" class="radio-label">Closed</label>
                    </div>
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
        
            </div>
        </form>
               
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
